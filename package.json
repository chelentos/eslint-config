{
  "name": "@gravity-ui/eslint-config",
  "version": "3.2.0",
  "description": "Gravity UI ESLint config, following our styleguide",
  "keywords": [
    "eslint",
    "config"
  ],
  "license": "MIT",
  "main": "index.js",
  "files": [
    "a11y.js",
    "base.js",
    "client.js",
    "react.js",
    "server.js",
    "prettier.js",
    "constants.js",
    "import-order.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/eslint-config"
  },
  "bugs": {
    "url": "https://github.com/gravity-ui/eslint-config/issues"
  },
  "homepage": "https://github.com/gravity-ui/eslint-config#readme",
  "scripts": {
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 0",
    "lint": "npm run lint:js && npm run lint:other",
    "lint:js": "eslint . --report-unused-disable-directives",
    "lint:other": "npm run prettier -- --check",
    "prettier": "prettier '**/*.{md,yaml,yml,json}'"
  },
  "dependencies": {
    "@babel/core": "^7.24.4",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-react": "^7.24.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import-x": "^3.1.0",
    "eslint-plugin-jsdoc": "^50.2.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0-beta-26f2496093-20240514",
    "eslint-plugin-security": "^3.0.1",
    "typescript-eslint": "^8.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@gravity-ui/prettier-config": "^1.1.0",
    "eslint": "^9.9.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "prettier": "^3.2.5"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "nano-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet --report-unused-disable-directives"
    ],
    "*.{md,yaml,yml,json}": [
      "prettier --write"
    ]
  }
}
